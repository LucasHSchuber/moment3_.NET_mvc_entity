<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bookie - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/moment3_mvc_entity.styles.css" asp-append-version="true" />


    <!-- Favicon -->
    <link rel="icon" href="~/images/louse2.ico" type="image/x-icon">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/c62fde443a.js" crossorigin="anonymous"></script>


    <!-- Add these links to your Razor view to include Owl Carousel CSS and JavaScript -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/owl.carousel@2.3.4/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/owl.carousel@2.3.4/dist/assets/owl.theme.default.min.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/owl.carousel@2.3.4/dist/owl.carousel.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


</head>

<body>
    <header class="header">
        <nav class="navbar navbar-expand-xl navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img
                        src="~/images/louse.png" alt="logo"> Bookie</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="fas fa-bars" style="color:#fff; font-size:26px;"></i>
                    </span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="Allbooks">All
                                books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Rentabook">Rent
                                a book</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Author" asp-action="Index">Index
                                Author</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="">
            @* <div class="mt-3">
                @await Html.PartialAsync("_Breadcrumbs")
            </div> *@
            <div>
                @RenderBody()
            </div>
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
    <div class="container mt-5 footer-box">
    <div>
    <a class="navbar-brand-footer" asp-area="" asp-controller="Home" asp-action="Index">Bookie</a>
    <p>&copy; 2024 - moment2_mvc </p>
    </div>

    <ul class="footer-nav d-flex justify-content-center">
    <li class="footer-nav-item">
    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </li>
    <li class="footer-nav-item">
    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Allbooks">All
    books</a>
    </li>
    <li class="footer-nav-item">
    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Rentabook">Rent
    a book</a>
    </li>
    </ul>

    <hr>

    <div class="socials d-flex justify-content-center my-5">
    <i title="Facebook" class="fa-brands fa-1x fa-facebook-f"></i>
    <i title="Instagram" class="fa-brands fa-1x fa-instagram mx-5"></i>
    <i title="X" class="fa-brands fa-1x fa-x-twitter"></i>
    </div>

    </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
