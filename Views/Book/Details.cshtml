@model moment3_mvc_entity.Models.Book

@{
    ViewData["Title"] = "Details";
}


<div class="details-wrapper mt-2">

    <div class="container d-flex pt-5">
        <div>
            <img src="~/imgupload/@Model.ImageName" alt="@Html.DisplayFor(model => model.BookId)">
        </div>
        <div>
            <h1>@Html.DisplayFor(model => model.Title)</h1>
            <h6>@Html.DisplayFor(model => model.AuthorName)</h6>

            <div>
                <a asp-action="Edit" asp-route-id="@Model?.BookId">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</div>


